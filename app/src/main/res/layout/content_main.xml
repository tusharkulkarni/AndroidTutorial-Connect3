<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tushar.connect3.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red00"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            android:tag="0" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red01"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red02"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            android:tag="2" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red10"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="3" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red11"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="4" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red12"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
            android:tag="5" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red20"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            android:tag="6" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red21"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            android:tag="7" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/red22"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            android:tag="8" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Turn : "
        android:id="@+id/playerTurnLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/playerTurnValueLabel"
        android:editable="false"
        android:textStyle="bold|italic"
        android:typeface="sans"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/playerToken"
        android:layout_toRightOf="@+id/playerToken"
        android:layout_toEndOf="@+id/playerToken" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/playerToken"
        android:layout_alignBottom="@+id/playerTurnLabel"
        android:layout_toRightOf="@+id/playerTurnLabel"
        android:layout_toEndOf="@+id/playerTurnLabel"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>
